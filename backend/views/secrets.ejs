<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Company Info</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <!-- Image and text -->
    <%- include('partials/navbar' ) %>
    <div class="container">
      <h1>Projects Report</h1>
      <table>
        <thead>
          <tr>
            <th>Project ID</th>
            <th>Project Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Staff Names</th>
            <th>Details</th>
            <th>Location</th>
            <th>Notifications</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(function(project) { %>
          <tr>
            <td><%= project.project_id %></td>
            <td><%= project.project_name %></td>
            <td><%= project.start_date %></td>
            <td><%= project.end_date %></td>
            <td><%= project.staff_names %></td>
            <td><%= project.details %></td>
            <td><%= project.location %></td>
            <td><%= project.notifications %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <h1>Daily Logs Report</h1>
      <table>
        <thead>
          <tr>
            <th>Daily Log ID</th>
            <th>Log Date</th>
            <th>Project Name</th>
            <th>Staff Names</th>
            <th>Status</th>
            <th>Reimbursed</th>
            <th>Hours</th>
          </tr>
        </thead>
        <tbody>
          <% dailyLogs.forEach(function(log) { %>
          <tr>
            <td><%= log.daily_log_id %></td>
            <td><%= log.log_date %></td>
            <td><%= log.project_name %></td>
            <td><%= log.staff_names %></td>
            <td><%= log.status %></td>
            <td><%= log.reimbursed %></td>
            <td><%= log.hours %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <h1>Expenses Report</h1>
      <table>
        <thead>
          <tr>
            <th>Expense ID</th>
            <th>Project Name</th>
            <th>Expense Date</th>
            <th>Expense Type</th>
            <th>Amount</th>
            <th>Daily Log ID</th>
            <th>Staff Name</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% expenses.forEach(function(expense) { %>
          <tr>
            <td><%= expense.expense_id %></td>
            <td><%= expense.project_name %></td>
            <td><%= expense.expense_date %></td>
            <td><%= expense.expense_type %></td>
            <td><%= expense.amount %></td>
            <td><%= expense.daily_log_id %></td>
            <td><%= expense.staff_name %></td>
            <td><%= expense.status %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
