<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Company Info</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <script>
      document.addEventListener("DOMContentLoaded", (event) => {
        // Function to handle button clicks and open PDFs
        function openPDF(url) {
          window.open(url, "_blank");
        }

        // Add event listeners to daily log buttons
        document.querySelectorAll(".yesterday").forEach((button) => {
          button.addEventListener("click", () => {
            openPDF("/example_files/example.pdf"); // Replace with actual path
          });
        });

        document.querySelectorAll(".today").forEach((button) => {
          button.addEventListener("click", () => {
            openPDF("/example_files/example.pdf"); // Replace with actual path
          });
        });

        // document
        //   .querySelector(".expense-buttons .view-all")
        //   .addEventListener("click", () => {
        //     console.log("Viewing expenses");
        //     // Select the div with the ID 'expenses'
        //     const expensesDiv = document.getElementById("expenses");
        //     // Remove the 'hidden' class
        //     expensesDiv.classList.remove("hidden");
        //   });
        // document
        //   .querySelector(".daily-log-buttons .view-all")
        //   .addEventListener("click", () => {
        //     console.log("Viewing logs");
        //     // Select the div with the ID 'expenses'
        //     const expensesDiv = document.getElementById("daily-logs");
        //     // Remove the 'hidden' class
        //     expensesDiv.classList.remove("hidden");
        //   });
        document.querySelectorAll(".expense-buttons").forEach((button) => {
          button.addEventListener("click", () => {
            console.log("Viewing expenses");
            // Select the div with the ID 'expenses'
            const expensesDiv = document.getElementById("expenses");
            // Remove the 'hidden' class
            expensesDiv.classList.remove("hidden");
          });
        });
        document.querySelectorAll(".daily-log-buttons").forEach((button) => {
          button.addEventListener("click", () => {
            console.log("Viewing logs");
            const expensesDiv = document.getElementById("daily-logs");
            expensesDiv.classList.remove("hidden");
          });
        });
      });
    </script>
  </head>
  <body>
    <%- include('partials/navbar' ) %>
    <div class="container">
      <h1>Projects Report</h1>
      <table>
        <thead>
          <tr>
            <th>Project ID</th>
            <th>Project Name</th>
            <th>Project Status</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Details</th>
            <th>Location</th>
            <th>Staff Names</th>
            <th>Notifications</th>
            <th>Daily Logs</th>
            <th>Expenses</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(function(project) { %>
          <tr>
            <td><%= project.project_id %></td>
            <td><%= project.project_name %></td>
            <td>
              <% if( project.project_status === 1) { %> Ongoing <% } else {%>
              Complete <% } %>
              <form action="/updateProjectStatus" method="post">
                <input
                  type="hidden"
                  name="project_id"
                  value="<%= project.project_id %>"
                />
                <label>
                  <input type="radio" name="project_status" value="1" <%=
                  project.project_status === 'Ongoing' ? 'checked' : '' %>>
                  Ongoing
                </label>
                <label>
                  <input type="radio" name="project_status" value="0" <%=
                  project.project_status === 'Completed' ? 'checked' : '' %>>
                  Completed
                </label>
                <button type="submit">Update Status</button>
              </form>
            </td>
            <td><%= project.start_date %></td>
            <td><%= project.end_date %></td>
            <td><%= project.details %></td>
            <td><%= project.location %></td>
            <td>
              <% project.staff_names.split(', ').forEach(function(name) { %>
              <span class="staff-name"><%= name %></span>
              <% }); %>
            </td>
            <td><%= project.notifications %></td>
            <td>
              <div class="daily-log-buttons">
                <button class="yesterday">Yesterday</button
                ><button class="today">Today</button
                ><button class="view-all" id="view-daily-logs">View All</button>
              </div>
            </td>
            <td>
              <div class="expense-buttons">
                <button class="yesterday">Yesterday</button
                ><button class="today">Today</button
                ><button class="view-all" id="view-expenses">View All</button>
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <div class="container hidden" id="daily-logs">
      <h1>Daily Logs Report</h1>
      <table>
        <thead>
          <tr>
            <th>Daily Log ID</th>
            <th>Log Date</th>
            <th>Project Name</th>
            <th>Staff Names</th>
            <th>Status</th>
            <th>Reimbursed</th>
            <th>Hours</th>
          </tr>
        </thead>
        <tbody>
          <% dailyLogs.forEach(function(log) { %>
          <tr>
            <td><%= log.daily_log_id %></td>
            <td><%= log.log_date %></td>
            <td><%= log.project_name %></td>
            <td><%= log.staff_names %></td>
            <td>
              <%= log.status === 0 ? 'not-filled' : log.status === 1 ? 'filled'
              : 'to-contractor' %>
            </td>
            <td>
              <%= log.reimbursed === 0 ? 'not-reimbursed' : log.reimbursed === 1
              ? 'received-money' : 'reimbursed' %>
            </td>
            <td><%= log.hours %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <div class="container hidden" id="expenses">
      <h1>Expenses Report</h1>
      <table>
        <thead>
          <tr>
            <th>Expense ID</th>
            <th>Project Name</th>
            <th>Expense Date</th>
            <th>Expense Type</th>
            <th>Amount</th>
            <th>Daily Log ID</th>
            <th>Staff Name</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% expenses.forEach(function(expense) { %>
          <tr>
            <td><%= expense.expense_id %></td>
            <td><%= expense.project_name %></td>
            <td><%= expense.expense_date %></td>
            <td>
              <%= expense.expense_type === 0 ? 'tools' : expense.expense_type
              === 1 ? 'transportation' : expense.expense_type === 2 ? 'meals' :
              expense.expense_type === 3 ? 'medical' : expense.expense_type ===
              4 ? 'accommodation' : 'misc' %>
            </td>
            <td><%= expense.amount %></td>
            <td><%= expense.daily_log_id %></td>
            <td><%= expense.staff_name %></td>
            <td>
              <%= expense.status === 0 ? 'not-filled' : expense.status === 1 ?
              'filled' : 'covered' %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
